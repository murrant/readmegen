{
    "name": "fojuth/readmegen",
    "description": "Readme file / doc generator. It uses VCS logs as a source of information.",
    "keywords": ["readme", "generator", "log parser", "vcs"],
    "license": "MIT",
    "authors": [
        {
            "name": "Kamil Fojuth",
            "email": "fojuth@gmail.com"
        }
    ],
    "require": {
        "symfony/yaml": "~2.1",
        "ulrichsg/getopt-php": "2.*"
    },
    "require-dev": {
        "phpspec/phpspec": "^2.5"
    },
    "config": {
        "platform": {"php": "5.3.9"},
        "bin-dir": "bin"
    },
    "bin": [
        "readmegen"
    ],
    "autoload": {
        "psr-4": {
            "ReadmeGen\\": "src/"
        }
    }
}
